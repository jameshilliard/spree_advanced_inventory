<%= render :partial => 'spree/admin/shared/inventory_sub_menu' %>

<% content_for :page_title do %>
  <%= @purchase_order.dropship ? t(:editing_dropship) : t(:editing_purchase_order) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:back_to_purchase_orders_list), spree.admin_purchase_orders_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @purchase_order } %>

<%= form_for [:admin, @purchase_order] do |f| %>
  <fieldset class="no-border-top">

    <%= render :partial => 'form', :locals => { :f => f } %>

    <div class="clear"></div>

    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>

<% end %>

